#include "monty.h"

/**
 * main - entry point
 * @argc: num arguments
 * @argv: array with arguments
 * Return: int
 */
int main(int argc, char *argv[])
{
	FILE *file = NULL;
	unsigned int line_number = 0;
	char *line = NULL;
	char *opcode = NULL;
	char *arg = NULL;
	size_t size = 0;
	stack_t *stack = NULL;

	if (argc != 2)
	{
		fprintf(stderr, "USAGE: monty file\n");
		exit(EXIT_FAILURE);
	}
	file = fopen(argv[1], "r");
	if (file == NULL)
	{
		fprintf(stderr, "Error: Can't open file %s\n", argv[1]);
		exit(EXIT_FAILURE);
	}
	while (getline(&line, &size, file) != -1)
	{
		line_number++;
		opcode = strtok(line, "\n");
		if (opcode == NULL || strchr(opcode, '#') != NULL)
			continue;
		if (strcmp(opcode, "push") == 0)
		{
			arg = strtok(NULL, "\n");
			if (arg != NULL)
			{
				push(&stack, line_number);
			}
			else
			{
				fprintf(stderr, "%d:usage : push integer\n", line_number); /* Error, free, and exit*/
				free(opcode);
				fclose(file);
				exit(EXIT_FAILURE);
			}
		}
		else
		{
			opcode_func(opcode, &stack, line_number);
			break;
		}
	/*push(&stack, line_number);*/
	/*	pall(&stack, line_number);*/
	}
/*	pall(&stack, line_number);*/
	free(stack);
	exit(EXIT_SUCCESS);
}

